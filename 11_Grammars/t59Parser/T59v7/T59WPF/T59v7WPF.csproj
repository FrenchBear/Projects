		<TargetFramework>net10.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<Authors>Pierre Violent</Authors>
		<Description>A WPF interface for T59 parsing and formatting library</Description>
		<Copyright>Copyright ©2025-2026 Pierre Violent</Copyright>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="Icons\about.ico" />
	  <None Remove="Icons\close.ico" />
	  <None Remove="Icons\new.ico" />
	  <None Remove="Icons\open.ico" />
	  <None Remove="Icons\save.ico" />
	</ItemGroup>

	<ItemGroup>
	  <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3650.58" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\T59Core\T59v7Core.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Resource Include="Icons\about.ico" />
	  <Resource Include="Icons\close.ico" />
	  <Resource Include="Icons\new.ico" />
	  <Resource Include="Icons\open.ico" />
