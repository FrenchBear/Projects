<Window x:Class="T59v7WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T59v7WPF"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:ViewModel}"
        Title="T59 v6 WPF" Height="450" Width="1300">

    <Window.InputBindings>
        <KeyBinding Command="{Binding NewCommand}" Key="N" Modifiers="Control" />
        <KeyBinding Command="{Binding OpenFileCommand}" Key="O" Modifiers="Control" />
        <KeyBinding Command="{Binding SaveCommand}" Key="S" Modifiers="Control" />
        <KeyBinding Command="{Binding AboutCommand}" Key="F1" />
    </Window.InputBindings>

    <Window.Resources>
        <!-- Gray out toolbar elements when disabled (why is it not automatic ??) -->
        <Style TargetType="{x:Type Image}" x:Key="ToolbarImageStyle">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}, AncestorLevel=1}, Path=IsEnabled}" Value="False">
                    <Setter Property="Opacity" Value="0.35"></Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Padding="3" FontSize="14">
            <MenuItem Name="FileMenu" Header="_Fichier">
                <MenuItem Command="{Binding NewCommand}" Header="_Nouveau">
                    <MenuItem.Icon>
                        <Image Source="Icons/new.ico" Stretch="None" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Command="{Binding OpenFileCommand}" Header="_Ouvrir...">
                    <MenuItem.Icon>
                        <Image Source="Icons/open.ico" Stretch="None" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Command="{Binding SaveCommand}" Header="_Enregistrer">
                    <MenuItem.Icon>
                        <Image Source="Icons/save.ico" Stretch="None" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Command="{Binding SaveAsCommand}" Header="Enregistrer _sous..." />
                <Separator />
                <MenuItem Command="{Binding CloseCommand}" InputGestureText="Alt+F4" Header="_Quitter">
                    <MenuItem.Icon>
                        <Image Source="Icons/close.ico" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Name="HelpMenu" Header="_?">
                <MenuItem Command="{Binding AboutCommand}" Header="À _propos de T59v7WPF...">
                    <MenuItem.Icon>
                        <Image Source="Icons/about.ico" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Command="{Binding TestColorsCommand}" Header="_Test Colors" />
            </MenuItem>

        </Menu>

        <ToolBar DockPanel.Dock="Top" Margin="0,-1,0,1" ToolBarTray.IsLocked="True">
            <Button Command="{Binding NewCommand}" ToolTip="Crée un nouveau document">
                <Image Source="Icons/new.ico" Stretch="None" Style="{StaticResource ToolbarImageStyle}" />
            </Button>
            <Button Command="{Binding OpenFileCommand}" ToolTip="Ouvre un fichier existant">
                <Image Source="Icons/open.ico" Stretch="None" Style="{StaticResource ToolbarImageStyle}" />
            </Button>
            <Button Name="SaveTbButton" Command="{Binding SaveCommand}" ToolTip="Enregistre le fichier courant">
                <Image Source="Icons/save.ico" Stretch="None" Style="{StaticResource ToolbarImageStyle}" />
            </Button>
        </ToolBar>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalContentAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="120" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" />
                    <TextBlock Grid.Column="1" Text="{Binding Timing1}" />
                    <TextBlock Grid.Column="2" Text="{Binding Timing2}" />
                    <TextBlock Grid.Column="3" Text="{Binding Timing3}" />
                </Grid>
            </StatusBarItem>
        </StatusBar>

        <Grid TextElement.FontSize="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label TextBlock.FontWeight="DemiBold">Source code</Label>
            <Label Grid.Column="1" TextBlock.FontWeight="DemiBold">Colorized source</Label>
            <Label Grid.Column="2" TextBlock.FontWeight="DemiBold">Reformatted source</Label>

            <TextBox x:Name="SourceTextBox"
                 Grid.Row="1" Grid.Column="0"
                 FontFamily="Consolas"
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto" Margin="3"
                 Text="{Binding SourceCode, UpdateSourceTrigger=PropertyChanged, Delay=250, ValidatesOnDataErrors=True, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}"
                 AllowDrop="True" PreviewDragOver="SourceTextBox_PreviewDragOver" Drop="SourceTextBox_Drop" />
            <wv2:WebView2 x:Name="webView1" Grid.Row="1" Grid.Column="1" Margin="3" />
            <wv2:WebView2 x:Name="webView2" Grid.Row="1" Grid.Column="2" Margin="3" />
        </Grid>
    </DockPanel>
</Window>
