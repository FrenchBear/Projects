<Application
    x:Class="UniSearchNS.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniSearchNS">

    <!-- Without this, default ContentDialog max size is too small -->
    <Application.Resources>
        <x:Double x:Key="ContentDialogMaxWidth">1200</x:Double>
        <x:Double x:Key="ContentDialogMaxHeight">800</x:Double>
        <FontFamily x:Key="LastResortHE-Regular">Assets/Fonts/LastResortHE-Regular.ttf#Last Resort High-Efficiency</FontFamily>
    </Application.Resources>
    
</Application>
