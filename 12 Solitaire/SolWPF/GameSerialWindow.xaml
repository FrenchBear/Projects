<Window x:Class="SolWPF.GameSerialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolWPF"
        mc:Ignorable="d"
        Title="Game Serial" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Label VerticalAlignment="Top" Content="Enter Game # (1..999999)" />
        <TextBox Name="GameSerialTextBox" Grid.Column="1" VerticalAlignment="Top" Text="{Binding GameSerial}" />
        <StackPanel Orientation="Vertical" Grid.Column="2" >
            <Button Content="OK" IsDefault="True" Click="OKButton_Click" />
            <Button Content="Cancel" IsCancel="True" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
