<Window x:Class="Displays.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Displays"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <local:SevenSegmentDisplay Digit="-" Width="100"/>
            <local:SevenSegmentDisplay Digit="1" Dot="True" Width="100"/>
            <local:SevenSegmentDisplay Digit="2" Width="100"/>
            <local:SevenSegmentDisplay Digit="3" Dot="False" Width="100"/>
            <local:SevenSegmentDisplay Digit="A" Width="100"/>
            <local:SevenSegmentDisplay Digit="F" Dot="False" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
