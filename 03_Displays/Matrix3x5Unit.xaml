<UserControl x:Class="Displays.Matrix3x5Unit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Displays"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="30">
    
    <Viewbox>
        <Grid x:Name="DotMatrixGrid" Width="30" Height="50" Margin="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--<Path Fill="Orange" Data="M 0,10 A 10,10 90 0 1 10,0 L 10,10" />
            <Path Grid.Column="2" Fill="Orange" Data="M 0,0 A 10,10 90 0 1 10,10 L 0,10" />
            <Path Grid.Row="4" Grid.Column="2" Fill="Orange" Data="M 10,0 A 10,10 90 0 1 0,10 L 0,0" />
            <Path Grid.Row="4" Fill="Orange" Data="M 10,10 A 10,10 90 0 1 0,0 L 10,0" />-->
        </Grid>
    </Viewbox>
</UserControl>
