<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net9.0-windows10.0.22621.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<RootNamespace>UniView_WinUI3</RootNamespace>
		<AssemblyName>UniView WinUI3</AssemblyName>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<Platforms>x64</Platforms>
		<RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
		<PublishProfile>win-$(Platform).pubxml</PublishProfile>
		<UseWinUI>true</UseWinUI>
		<EnableMsixTooling>true</EnableMsixTooling>
		<ImplicitUsings>disable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Title>UniView WinUI3</Title>
		<Version>1.17.0</Version>
		<Description>Details Unicode characters entered in a text box, and support some Unicode transformations. Search characters by name. (Net9 C#13 WinUI3 U17)</Description>
		<Product>UniView C# WinUI3</Product>
		<Copyright>Copyright ©2018-2025 Pierre Violent</Copyright>
		<Authors>Pierre Violent</Authors>
		<ApplicationIcon>Assets\Cat2.ico</ApplicationIcon>
		<SupportedOSPlatformVersion>10.0.22621.0</SupportedOSPlatformVersion>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<PackageCertificateKeyFile>UniView WinUI3_TemporaryKey.pfx</PackageCertificateKeyFile>
		<AppxPackageSigningEnabled>True</AppxPackageSigningEnabled>
		<GenerateAppInstallerFile>False</GenerateAppInstallerFile>
		<AppxPackageSigningTimestampDigestAlgorithm>SHA256</AppxPackageSigningTimestampDigestAlgorithm>
		<AppxAutoIncrementPackageRevision>True</AppxAutoIncrementPackageRevision>
		<AppxSymbolPackageEnabled>False</AppxSymbolPackageEnabled>
		<GenerateTestArtifacts>True</GenerateTestArtifacts>
		<AppxBundle>Auto</AppxBundle>
		<AppxBundlePlatforms>x64</AppxBundlePlatforms>
		<HoursBetweenUpdateChecks>0</HoursBetweenUpdateChecks>
		<PackageCertificateThumbprint>F6C9C15B8BEE033BA811F0D546B23C514519E0F3</PackageCertificateThumbprint>
	</PropertyGroup>
	
